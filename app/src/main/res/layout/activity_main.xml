<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anhnentroixanh"

    android:orientation="vertical"

    tools:context=".Activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <LinearLayout
            android:id="@+id/Ln1"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/backgrowvuongtron"
                android:orientation="vertical"

                >

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"

                    android:src="@drawable/gear" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/baonhapvao"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/Rlaenter"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/backgrowvuongtron">

                <LinearLayout
                    android:id="@+id/ln"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/backgrowvuongtron">

                    <ImageView


                        android:id="@+id/Imvsearch"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:src="@drawable/searchtrang" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/ln"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/nhapvao"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_18sdp" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_9sdp"
            android:background="@drawable/backgrowvuongtron"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/map"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"

                android:src="@drawable/location" />


        </LinearLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/backgrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="@dimen/_268sdp"
                    android:layout_height="@dimen/_268sdp"
                    android:background="@drawable/backgrow"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Tvplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:text="Hà Nội"
                        android:textColor="@color/colorAccent2"
                        android:textSize="@dimen/_30sdp" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/Tvdoam"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_58sdp"
                                    android:text="Độ ẩm"
                                    android:textColor="@color/colorAccent2"
                                    android:textSize="@dimen/_20sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:text="45%"
                                    android:textColor="@color/colorAccent2"
                                    android:textSize="@dimen/_13sdp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_70sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/Tvtemperature"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_70sdp"
                                        android:gravity="center"
                                        android:text="24"
                                        android:textColor="@color/colorAccent2"
                                        android:textSize="@dimen/_60sdp" />

                                    <ImageView
                                        android:id="@+id/Imvdof"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:src="@drawable/celsius" />
                                </LinearLayout>

                                <ImageView

                                    android:id="@+id/iconweather"
                                    android:layout_width="@dimen/_130sdp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:src="@drawable/weather" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/Tvgioview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_58sdp"
                                    android:gravity="center"
                                    android:text="Gió"
                                    android:textColor="@color/colorAccent2"
                                    android:textSize="@dimen/_20sdp" />

                                <TextView
                                    android:id="@+id/Tvwind"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:gravity="center"
                                    android:text="7.42 m/s"
                                    android:textColor="@color/colorAccent2"
                                    android:textSize="@dimen/_13sdp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/Tvweather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mua"
                        android:textColor="@color/colorAccent2"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Tvthu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thứ năm"
                            android:textColor="@color/colorAccent2"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="28-3-2019"
                            android:textColor="@color/colorAccent2"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/timeofday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:31"
                        android:textColor="@color/colorAccent2"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_70sdp"
                android:background="@drawable/backgrow2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview6time"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>